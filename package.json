{
  "name": "zhook",
  "version": "0.0.0",
  "description": "Tiny hooks library, mostly for plugin system.",
  "author": "Pig Fang <g-plane@hotmail.com>",
  "license": "MIT",
  "repository": "g-plane/zhook",
  "type": "module",
  "exports": {
    ".": "./dist/mod.js"
  },
  "engines": {
    "node": ">= 12"
  },
  "files": [
    "dist",
    "mod.ts"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p .",
    "fmt": "prettier --write *.ts",
    "lint": "prettier --check *.ts && tsc -p . && size-limit",
    "test": "jest",
    "prepublishOnly": "tsc -p ."
  },
  "keywords": [
    "hook",
    "hooks",
    "filter",
    "dispatch",
    "dispatcher",
    "eventemitter",
    "events",
    "plugin"
  ],
  "devDependencies": {
    "@gplane/tsconfig": "^4.2.0",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "size-limit": "^4.9.2",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  }
}
